{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Betamasaheft Counter App",
        "description": "The API describing the betamasa counter app"
    },
    "servers": [
        {
            "url": "/exist/apps/counter-app",
            "description": "Relative URL using the current host and port"
        }
    ],
	"security": [
    ],
    "paths": {
        "/reserve-counter": {
            "get": {
                "summary": "Reserve a counter ",
                "operationId": "api:reserve-counter",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": { "type": "boolean" },
										"value": { "type": "number" }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/reset-counter": {
            "post": {
                "summary": "Reset the counter to the given count",
                "operationId": "api:reset-counter",
				"parameters": [
					{
						"name": "value",
						"in": "query",
						"description": "The value to reset the counter to",
						"required": "true",
						"type": "number",
						"example": 1234
					}
				],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": { "type": "boolean" }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
